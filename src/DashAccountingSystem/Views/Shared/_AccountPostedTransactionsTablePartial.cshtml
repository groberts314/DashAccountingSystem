@using DashAccountingSystem.Data.Models
@using DashAccountingSystem.Models
@model PagedResult<AccountTransactionViewModel>
@{
    var tenant = ViewBag.Tenant as Tenant;
}

<table class="table table-striped acct-tx-table">
    <thead>
        <tr>
            <th class="col-md-1">Date</th>
            <th class="col-md-4 col-lg-6">Description</th>
            <th class="col-md-1">Check #</th>
            <th class="col-md-2 col-lg-1">Debit</th>
            <th class="col-md-2 col-lg-1">Credit</th>
            <th class="col-md-3 col-lg-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model.Results)
        {
            <tr>
                <td>@transaction.Date.ToString("d")</td>
                <td>@transaction.Description</td>
                <td>@(transaction.CheckNumber.HasValue ? transaction.CheckNumber.ToString() : null)</td>
                <td style="text-align: right">
                    @if (transaction.AmountType == AmountType.Debit)
                    {
                        <small class="asset-type text-muted">@transaction.AssetType</small> @transaction.Debit.Value.ToString("N2")
                    }
                </td>
                <td style="text-align: right">
                    @if (transaction.AmountType == AmountType.Credit)
                    {
                        <small class="asset-type text-muted">@transaction.AssetType</small> @transaction.Credit.Value.ToString("N2")
                    }
                </td>
                <td style="text-align: right">
                    <partial name="_JournalEntryActionLinksPartial" for="@transaction" />
                    <a asp-route="journalEntryDetails"
                       asp-route-tenantId="@tenant.Id"
                       asp-route-entryId="@transaction.EntryId">
                        View
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>

@{
    var prevDisabled = Model.Pagination.PageNumber == 1 ? "disabled" : "";
    var nextDisabled = !Model.Pagination.ContainsMoreRecords ? "disabled" : "";
    var accountId = Model.Results.Select(tx => tx.AccountId).First();
}

<a asp-route="accountDetails"
   asp-route-tenantId="@tenant.Id"
   asp-route-accountId="@accountId"
   asp-route-pageNumber="@(Model.Pagination.PageNumber - 1)"
   asp-route-pageSize="@(Model.Pagination.PageSize)"
   class="btn btn-default @prevDisabled"
>
    Previous
</a>
<a asp-route="accountDetails"
   asp-route-tenantId="@tenant.Id"
   asp-route-accountId="@accountId"
   asp-route-pageNumber="@(Model.Pagination.PageNumber + 1)"
   asp-route-pageSize="@Model.Pagination.PageSize"
   class="btn btn-default @nextDisabled"
>
    Next
</a>
